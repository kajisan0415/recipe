<div class="sidebar">
  <div class="sidebar-User">
    <h3 class="sidebar-title">User</h3>
      <div class="user-container">
        <div class="user-container-item">
          <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>
        <div class="user-container-item">
          <h4 class="user-name-title">Name</h4>
          <p class="user-name-body"><%= @user.name %></p>
        </div>
        <div class="user-container-item">
          <h4 class="user-introduction-title">Introduction</h4>
          <p class="user-introduction-body"><%= @user.introduction %></p>
        </div>
        <% if @user.id == current_user.id %>
            <p class="sidebar-user-edit"><%= link_to "Profile Edit", edit_user_path(@user),class:"fas fa-edit edit-icon" %></p>
        <% end %>
      </div>
  </div>

  <div class="sidebar-photos">
    <h3 class="sidebar-title">Photos</h3>
    <div class="sidebar-photos-container">
      <% @sidebar.each do |tweet| %>
        <%= link_to tweet_path(tweet.id) do %>
        <%= attachment_image_tag tweet, :image,:fill, 70, 70 %>
        <% end %>
      <% end %>
    </div>
    <%= paginate @sidebar,class:"sidebar-pagenate" %>
  </div>

  <div class="sns">
    <h3 class="sidebar-title">SNS</h3>
    <p class="sns-text">FOLLOW ME</p>
    <div class="sns-icons">
      <%= link_to "","https://twitter.com",class:"fab fa-twitter-square" %>
      <%= link_to "","https://www.instagram.com",class:"fab fa-instagram-square" %>
      <%= link_to "","https://ja-jp.facebook.com",class:"fab fa-facebook-square" %>
      <%= link_to "","https://www.youtube.com",class:"fab fa-youtube" %>
      <%= link_to "","https://www.snapchat.com/",class:"fab fa-snapchat-square" %>
    </div>
  </div>
</div>
